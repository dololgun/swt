<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Timekeeping"
            id="com.sam.e4.clock.ui">
      </category>
      <view
            name="Clock View"
            inject="true"
            icon="icons/sample.png"
            category="com.sam.e4.clock.ui"
            class="com.sam.e4.clock.ui.views.ClockView"
            id="com.sam.e4.clock.ui.views.ClockView">
      </view>
      <view
            name="Time Zone Tree View"
            inject="true"
            icon="icons/sample.png"
            category="com.sam.e4.clock.ui"
            class="com.sam.e4.clock.ui.views.TimeZoneTreeView"
            id="com.sam.e4.clock.ui.views.TimeZoneTreeView">
      </view>
      <view
            name="Time Zone Table View"
            inject="true"
            icon="icons/sample.png"
            category="com.sam.e4.clock.ui"
            class="com.sam.e4.clock.ui.views.TimeZoneTableView"
            id="com.sam.e4.clock.ui.views.TimeZoneTableView">
      </view>
      
   </extension>
   
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory 
          adaptableType="java.util.TimeZone"
          class="com.sam.e4.clock.ui.internal.TimeZoneAdapterFactory">
          <adapter
              type="org.eclipse.ui.views.properties.IPropertySource" />
      </factory>    
   </extension>
   <extension
         point="org.eclipse.ui.commands">
         <command 
             name="Hello" 
             description="Says Hello World" 
             id="com.sam.e4.clock.ui.command.hello" />
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
         <handler 
             class=""
             commandId="com.sam.e4.clock.ui.command.hello" />
   </extension>
   

</plugin>
